<h1>Pirates</h1>

@if (Model.Count != 0)
{
  <ul>
    @foreach (var pirate in Model)
    {
      <li><a href='/pirates/@pirate.GetId()'>@pirate.GetName()</a></li>
    }
  </ul>
  <form action="/pirates/delete" method="post">
    <button type="submit">Clear pirates</button>
  </form>
}
<h4><a href="/pirates/new">Add pirate</a></h4>
<h4><a href="/">Return home</a></h4>
