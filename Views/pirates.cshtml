<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<link rel="stylesheet" href="/Content/styles.css" >
<link href="https://fonts.googleapis.com/css?family=font-effect-fire-animation" rel="stylesheet">
<h1>Pirates</h1>

@if (Model.Count != 0)
{
  <ol>
    @foreach (var pirate in Model)
    {

      <li><a href='/pirates/@pirate.GetId()'>@pirate.GetName()</a></li>

    }
  </ol>
  <form action="/pirates/delete" method="post">
    <button type="submit">Clear pirates</button>
  </form>
}
<h4><a href="/pirates/new">Add pirate</a></h4>
<h4><a href="/">Return home</a></h4>
